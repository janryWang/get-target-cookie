{
  "name": "get-target-cookie",
  "version": "0.1.0",
  "main": "lib",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "lint": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janrywang/get-target-cookie.git"
  },
  "keywords": [
    "cookie",
    "node"
  ],
  "resolutions": {
    "yargs": "^16.x",
    "commander": "^6.x"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.13.4",
    "open": "^8.4.0"
  },
  "devDependencies": {
    "@types/node": "^16.10.5",
    "@types/koa": "^2.13.4",
    "@typescript-eslint/parser": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "eslint-plugin-markdown": "^2.0.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "ghooks": "^2.0.4",
    "lint-staged": "^8.2.1",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/prompt-cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "~4.1.5"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build && lint-staged",
      "commit-msg": "commitlint --edit"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --ext .ts,.tsx,.js",
      "pretty-quick --staged",
      "git add"
    ],
    "*.md": [
      "pretty-quick --staged",
      "git add"
    ]
  }
}
